@{
    var firstColumnBooks = randomBooks.Take(5).ToList();
    var secondColumnBooks = randomBooks.Skip(5).Take(5).ToList();
}

<style>

    .book-image {
        width: 100%; /* Adjust as needed */
        height: 400px; /* Adjust as needed */
        object-fit: cover; /* Maintain aspect ratio while filling the container */
    }
</style>

<div class="container" style="background-color: rgba(129, 142, 139, 0.8); margin-top:50px; margin-bottom: 50px; padding: 20px; border-radius: 10px;">
    <div class="row">
        <!-- First Column -->
        <div class="col col-xs-6 col-lg-6">
            @foreach (var book in firstColumnBooks)
            {
                <div class="row" style="margin-bottom: 20px;">
                    <div class="col col-xs-6 col-lg-5">
                        @if (!string.IsNullOrEmpty(book.ImageURLM))
                        {
                            <img src="@book.ImageURLL" class="book-image" />
                        }
                        else
                        {
                            <div style="height: 400px; width: 100%; background-color: lightgray;"></div>
                        }
                    </div>
                    <div class="col col-xs-6 col-lg-7">
                        <h5><a asp-action="Details" asp-route-id="@book.Id" style="color: black;">@book.BookTitle</a></h5>
                        <div>Author: @book.BookAuthor</div>
                        <div>Year of publication: @book.YearOfPublication.ToString()</div>
                        <div>Publisher: @book.Publisher</div>
                        <div>ISBN: @book.ISBN</div>
                        @if(User.Identity.IsAuthenticated)
                        {
                            
                        }

                    </div>
                </div>
            }
        </div>

        <!-- Second Column -->
        <div class="col col-xs-6 col-lg-6">
            @foreach (var book in secondColumnBooks)
            {
                <div class="row" style="margin-bottom: 20px;">
                    <div class="col col-xs-6 col-lg-5">
                        @if (!string.IsNullOrEmpty(book.ImageURLM))
                        {
                            <img src="@book.ImageURLL" class="book-image" />
                        }
                        else
                        {
                            <div style="height: 400px; width: 100%; background-color: lightgray;"></div>
                        }
                    </div>
                    <div class="col col-xs-6 col-lg-7">
                        <h5><a asp-action="Details" asp-route-id="@book.Id" style="color: black;">@book.BookTitle</a></h5>
                        <div>Author: @book.BookAuthor</div>
                        <div>Year of publication: @book.YearOfPublication.ToString()</div>
                        <div>Publisher: @book.Publisher</div>
                        <div>ISBN: @book.ISBN</div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>







@if(!Model.Any())
{
    <p>No Books Found</p>
}



